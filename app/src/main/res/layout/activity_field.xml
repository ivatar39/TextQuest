<?xml version="1.0" encoding="utf-8"?>
<!-- ГЛАВНЫЙ ЭКРАН -->
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">
<!-- СТАТЫ -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- ПЕРВЫЙ СТОЛЕЦ -->
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>
    <!-- ВТОРОЙ -->
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ПЕРВЫЙ ПАРАМЕТР -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

<!-- ИГРОВОЕ ПОЛЕ -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_margin="46dp">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_launcher_background"
        
        />
    <TextView
        android:id="@+id/tv_field_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Вы вошли в бар, и подсушали разговор о сокровищах зарытых на острове.
На столе незнакомцев лежала карта."/>
</LinearLayout>

<!-- ВЫБОР ОПЦИЙ -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical">

    <!-- 1 КОЛОНКА -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_option1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="отобрать карту силой"/>
        <Button
            android:id="@+id/bt_option2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="отобрать карту силой"/>

    </LinearLayout>
    <!-- 1 КОЛОНКА -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_option3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="любезно попросить переписать карту"/>
        <Button
            android:id="@+id/bt_option4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="предложить помощ в поиске сокровищ"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>